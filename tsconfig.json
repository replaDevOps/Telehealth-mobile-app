{
  "extends": "@react-native/typescript-config",
  "include": ["./**/*", "*.tsx", "*.json", "*.tff", "typings/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist"
  ],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "lib": ["es2017", "DOM"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "./src/**"],
    "paths": {
      "@*": ["./src/*"],
      "@constants": ["./src/constants/"],
      "@screens": ["./src/screens/"],
      "@navigation": ["./src/navigation/"],
      "@assets": ["./src/assets/"],
      "@components": ["./src/components/"],
      "@config": ["./src/config/"],
      "@context": ["./src/context/"],
      "@hooks": ["./src/hooks/"],
      "@services": ["./src/services/"],
      "@types": ["./src/types/"],
      "@store": ["./src/store/"],
      "@utils": ["./src/utils"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
}
